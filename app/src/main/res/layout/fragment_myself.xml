<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/theme_color">

        <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_comp_logo" />
    </RelativeLayout>

    <com.example.errorquestion.view.BaseLinlayout
            android:id="@+id/linCurrentVersion"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:drawer_image_left="@drawable/ic_current_version"
            app:drawer_title="@string/current_version" />
    <View
            style="@style/HLine"
            android:background="@color/tmgray" />

    <com.example.errorquestion.view.BaseLinlayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:drawer_image_left="@drawable/ic_current_version"
            app:drawer_title="@string/current_version" />
    <View
            style="@style/HLine"
            android:background="@color/tmgray" />

    <com.example.errorquestion.view.BaseLinlayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:drawer_image_left="@drawable/ic_current_version"
            app:drawer_title="@string/current_version" />
    <View
            style="@style/HLine"
            android:background="@color/tmgray" />

    <com.example.errorquestion.view.BaseLinlayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:drawer_image_left="@drawable/ic_current_version"
            app:drawer_title="@string/current_version" />
    <View
            style="@style/HLine"
            android:background="@color/tmgray"
            android:layout_marginBottom="50dp"/>

    <com.example.errorquestion.view.BaseButton
            android:id="@+id/btnFinish"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="10dp"
            android:text="@string/exit_project"
            android:textColor="@color/white"
            android:textSize="13dp"
            app:bg_corner="5dp" />
</LinearLayout>